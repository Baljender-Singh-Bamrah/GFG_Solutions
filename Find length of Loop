class Solution {
  public:
    int lengthOfLoop(Node *head) {
        // code here
        unordered_map<Node*, int> mp;
        int cnt = 1;
        while(head) {
            if(mp.count(head)) {
                return cnt - mp[head] ;
            }
            mp[head] = cnt;
            cnt++;
            head = head->next;
        }
        return 0;
    }
};
