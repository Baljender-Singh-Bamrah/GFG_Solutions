class Solution {
public:
    int maximumSwap(int num) {
        int result = 0;

        string st = to_string(num);
        priority_queue<int> pq;

        for(auto it : st) {
            pq.push(it);
        }

        for(int i=0;i<st.size();i++) {
            if(pq.top() != st[i]) {
                int val = pq.top();

                int idx = 0;
                for(int j=st.size(); j>=i ;j--){
                    if(st[j]==val){
                        idx=j;
                        break;
                    }
                }
                swap(st[i] , st[idx]);
                break;
            }
            else {
                pq.pop();
            }
        }

        return stoi(st);
    }
};
