class Solution {
  public:
    // Function to check if given number n is a power of two.
    bool isPowerofTwo(long long n) {
        // Your code here
         if(n<1){
            return 0;
        }
        while(n!=1){
            if(n%2==1){
                return 0;
            }
            n/=2;
        }
        return 1;
    }
};
