class Solution {
  public:
    int minOperations(vector<int>& arr) {
        double sum = accumulate(arr.begin(), arr.end(), 0.0);
        double tsum = sum / 2.0;
        priority_queue<double, vector<double>> pq(arr.begin(), arr.end());
    
        int steps = 0;
        while (sum > tsum) {
            double top = pq.top();
            pq.pop();
            sum -= top / 2.0;
            pq.push(top / 2.0);
            steps++;
        }
        return steps;
    }

};
